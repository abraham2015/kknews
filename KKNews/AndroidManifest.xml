<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cobo.kknews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="22" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".HomeActivity"></activity>
        
        <activity android:name=".NewsDetailsActivity"
                  android:windowSoftInputMode="adjustResize">
        </activity>
        
        <activity android:name=".LoginActivity"></activity>
        
        <activity android:name=".MeActivity"></activity>
        
        <activity android:name=".MeSetActivity"></activity>
        
        <activity android:name=".RegisterActivity"></activity>
        
        <activity android:name=".CommentActivity"></activity>
        
        <activity android:name=".CollectActivity"></activity>
        
        <activity android:name=".ReadActivity"></activity>
        
    </application>

</manifest>

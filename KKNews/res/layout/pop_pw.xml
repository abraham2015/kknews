<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebecee" 
    android:padding="4dp">
    
    
    
    <com.cobo.kknews.MyEditText
        android:id="@+id/pop_pw_et_account"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="2dp"
        android:maxLength="20"
        android:singleLine="true"
	    android:digits="@string/account_limit"
        android:hint="请输入账号:"
        android:background="@drawable/corner"/>
    
     <com.cobo.kknews.MyEditText
        android:id="@+id/pop_pw_et_oldPW"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="2dp"
        android:maxLength="11"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginTop="2dp"
        android:layout_below="@id/pop_pw_et_account"
        android:hint="请输入原来密码:"
        android:background="@drawable/corner"/>
     
     <com.cobo.kknews.MyEditText
        android:id="@+id/pop_pw_et_newPW"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="2dp"
        android:maxLength="11"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginTop="2dp"
        android:layout_below="@id/pop_pw_et_oldPW"
        android:hint="新密码:"
        android:background="@drawable/corner"/>
    
     <Button 
        android:id="@+id/pop_pw_btn_comfirm"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/pop_pw_et_newPW"
        android:background="@drawable/corner"
        android:text="确定"/>
    
     <Button 
        android:id="@+id/pop_pw_btn_cancel"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/pop_pw_btn_comfirm"
        android:layout_below="@id/pop_pw_et_newPW"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/corner"
        android:text="取消"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp" 
    android:paddingLeft="16dp" 
    android:paddingRight="16dp" >
    
	<com.cobo.kknews.MyRoundImageView
        android:id="@+id/item_comment_riv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_default" />

	<TextView
	    android:id="@+id/item_comment_tv_nickname"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="8dp"
	    android:layout_toRightOf="@id/item_comment_riv_icon"
	    android:textColor="#00BFFF" />

	<TextView
	    android:id="@+id/item_comment_tv_time"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:layout_alignBaseline="@id/item_comment_tv_nickname"
	    android:layout_toRightOf="@id/item_comment_tv_nickname"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="8dp"
	    android:textColor="@color/gray"
	    android:textSize="12sp" />

	<TextView
	    android:id="@+id/item_comment_tv_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/item_comment_riv_icon"
		android:layout_alignLeft="@id/item_comment_tv_nickname" />
	
</RelativeLayout>

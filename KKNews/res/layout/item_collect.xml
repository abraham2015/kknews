<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dp" >
    
    <com.loopj.android.image.SmartImageView
        android:id="@+id/item_collectNews_siv_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/feiji"
        android:scaleType="fitXY" />
    
    <TextView 
        android:id="@+id/item_collectNews_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_collectNews_siv_image"
        android:layout_marginLeft="6dp"
        android:maxLines="2" 
        android:textSize="18sp"
        android:text="中烟的的的的的的额大的的的的得到谔谔的"
        android:textColor="@android:color/black" />

     <TextView
         android:id="@+id/item_collectNews_tv_collectTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/item_collectNews_siv_image"
         android:layout_alignLeft="@+id/item_collectNews_tv_title"
         android:text="03/22 10:20"
         android:gravity="bottom"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >
    
    <RelativeLayout
        android:id="@+id/news_details_iv_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#fafafa" >

        <ImageView
            android:id="@+id/news_details_iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/news_details_tv_commentAmount"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:padding="2dp"
            android:background="#eb403d"
            android:scaleType="fitXY"
            android:text="1120跟帖"
            android:gravity="center_vertical"
            android:textColor="#fff8f8ff" />
    </RelativeLayout>
    
    
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_details_iv_head">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
    <TextView 
        android:id="@+id/news_details_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:maxLines="2"
        android:textSize="22sp" />
    
    <TextView 
        android:id="@+id/news_details_tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_details_tv_title"
        android:layout_marginLeft="16dp"
        android:textColor="#a8a8a8" />
    
    <TextView 
        android:id="@+id/news_details_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_details_tv_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:textColor="#a8a8a8"
        android:text="2017-03-12 10:00" />
     
    <ImageView
         android:id="@+id/news_details_iv_image"
         android:layout_width="match_parent"
         android:layout_height="180dp"
         android:scaleType="fitXY"
         android:layout_margin="16dp"
         android:src="@drawable/feiji"
		 android:layout_below="@id/news_details_tv_source" />
    
    <TextView 
        android:id="@+id/news_details_tv_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_details_iv_image"
        android:layout_margin="16dp"
       	android:textSize="18sp"
       	android:lineSpacingMultiplier="1.2" />
    </RelativeLayout>
    </ScrollView>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#fafafa" >
    
        <ImageView 
            android:id="@+id/news_details_iv_writeComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/write_comment"/>
        
          <TextView
             android:id="@+id/news_details_tv_writeComment"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/news_details_iv_writeComment"
             android:layout_toRightOf="@+id/news_details_iv_writeComment"
             android:layout_marginRight="56dp"
             android:text="写跟帖"
             android:textColor="@color/gray"
             android:textSize="18sp" />
          
          <ImageView 
            android:id="@+id/news_details_iv_collect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/collect"/>
          
        
         <View
            android:id="@+id/news_details_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/news_details_tv_writeComment"
            android:layout_marginTop="4dp"
           	android:layout_marginLeft="16dp"
           	android:layout_marginRight="56dp"
            android:background="@color/gray" />

    </RelativeLayout>

    

</RelativeLayout>

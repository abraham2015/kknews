<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dp" >
    
    <com.loopj.android.image.SmartImageView
        android:id="@+id/item_news_siv_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY" />
    
    <TextView 
        android:id="@+id/item_news_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_news_siv_image"
        android:layout_marginLeft="6dp"
        android:maxLines="2" 
        android:textSize="18sp"
        android:textColor="@android:color/black" />
    
     <TextView 
        android:id="@+id/item_news_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_below="@id/item_news_tv_title"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/item_news_siv_image" />

     <TextView
         android:id="@+id/item_news_tv_source"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/item_news_siv_image"
         android:layout_alignLeft="@+id/item_news_tv_title"
         android:gravity="bottom"/>

</RelativeLayout>
